<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VotingPolls</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/VotingPolls.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/bootstrap-icons/bootstrap-icons.css" />

</head>
<body class="bg-dark">
    <header>
        <nav class="navbar navbar-dark bg-dark fixed-top mb-2 d-inline"> @*border-bottom box-shadow*@
            <div class="row justify-content-between">
                <div class="col align-self-start">
                    <button class="navbar-toggler ms-2 align-self-start" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasDarkNavbar" aria-controls="offcanvasDarkNavbar">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                
                    &nbsp; <a class="navbar-brand text-light" asp-controller="Home" asp-action="Index">Voting Polls</a>
                </div>
                <partial name="_LoginPartial" />
            </div>
            <div class="col offcanvas offcanvas-start text-bg-dark" style="width: 325px" tabindex="-1" id="offcanvasDarkNavbar" aria-labelledby="offcanvasDarkNavbarLabel">
                <div class="offcanvas-header text-light bg-dark" >
                    <h4 class="offcanvas-title" id="offcanvasDarkNavbarLabel">Voting Polls</h4>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
                <div class="offcanvas-body bg-dark text-bg-dark" style="font-size:medium; width:325px">
                    <ul class="navbar-nav dropdown-menu-dark bg-dark justify-content-end flex-grow-1 pe-3">
                        <li class="nav-item">
                            <a  asp-controller="Home" asp-action="Index" class=" dropdown-item text-light">
                                <i class="bi bi-house-fill"></i> &nbsp; Home</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="VotingPolls" asp-action="Index" class=" dropdown-item text-light">
                                <i class="bi bi-grid-3x3-gap-fill"></i> &nbsp; Voting Polls List</a>
                        </li>
                        <li class="nav-item">
                            <a asp-controller="VotingPolls" asp-action="MyPolls" class="dropdown-item  text-light">
                                <i class="bi bi-grid-fill"></i> &nbsp; My polls</i></a>
                        </li>

                        <li class="nav-item">
                            <a asp-controller="VotingPolls" asp-action="Create" class="dropdown-item  text-light">
                                <i class="bi bi-plus-square-fill"></i> &nbsp; New poll</i></a>
                        </li>
                    </ul>
                </div>
            </div>
            
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            <br/><br/><br/>
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        @*<div class="container">
            &copy; 2023 - VotingPolls - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>*@
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
