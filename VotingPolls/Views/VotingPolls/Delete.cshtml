@using Microsoft.AspNetCore.Identity
@model ResultsVM
@inject UserManager<User> UserManager

@{
    ViewData["Title"] = "Delete";
}



<div class="container col-9 text-light custom-bg-gray-dark p-4 box-shadow-light-outset">
    <div>
        <h3 class="card-title">@Model.VotingPollVM.Name</h3>
        <h3 class="card-subtitle fw-normal">@Model.VotingPollVM.Question</h3>
    </div>
    <br/>

    <h3 class="text-danger text-center mb-3">Are you sure you want to delete</h3>
    <h3 class="text-danger text-center mb-3">this voting poll and all the votes?</h3>
    <br/>

    <div class="row">
        <div class="col">
            <form asp-action="Delete">
                <input class="custom-btn custom-btn-outline-gray" asp-action="Delete" type="submit" asp-route-votingPollId="@Model.VotingPollVM.Id" value="Delete"/>
            </form>
        </div>
        <div class="col-auto">
            <a asp-controller="VotingPolls" asp-action="MyPolls" class="custom-btn custom-btn-outline-gray float-end"><i class="bi bi-arrow-return-left"></i> &nbsp; Back to List</a>
        </div>
    </div>
    

    
</div>