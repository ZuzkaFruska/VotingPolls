@model IEnumerable<VotingPollListVM>

@{
    ViewData["Title"] = "My Polls";
}

    


<h2 class="container col-9 text-light p-0">Voting polls shared with you</h2>
<div class="container col-9 text-light p-0">
    <br/>
        @foreach (var votingPoll in @Model)
        {
            <div class="card text-light custom-bg-gray-dark box-shadow-light-outset mb-4">
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <h4 class="card-title">@votingPoll.Name</h4>
                            <h4 class="card-subtitle fw-normal mb-2">@votingPoll.Question</h4>
                        </div>
                        <div class="col-auto">
                            <div class="row">
                                <div class="col">
                                    <h5 class="float-end fw-normal mb-0">Date Created:</h5>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <h5 class="float-end fw-normal">@votingPoll.DateCreated.ToString("dd.MM.yyyy")</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col d-flex align-items-center">
                            <a asp-action="Vote" asp-route-votingPollId="@votingPoll.Id" class="custom-btn custom-btn-outline-gray me-3">
                                <i class="bi bi-star-fill"></i>  Vote!</a>
                            <a asp-action="Results" asp-route-votingPollId="@votingPoll.Id" class="custom-btn custom-btn-outline-gray">
                                <i class="bi bi-bar-chart-fill"></i>  Results</a>
                        </div>
                        <div class="col">
                            <div class="row">
                                <div class="col">
                                    <h5 class="float-end fw-normal mb-0">Author: </h5>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col">
                                    <h5 class="float-end fw-normal">@votingPoll.Owner.Firstname @votingPoll.Owner.Lastname</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
</div>
